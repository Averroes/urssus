<?py for post in posts: ?>
    <div>
    <h2>${post.title}</h2>
    <table width=100%>
    <tr><td><b>Date:&nbsp;</b>${post.date}</td></tr>
    <?py if post.author: ?>
      <tr><td><b>Author:&nbsp;</b>#{post.author}</td></tr>
    <?py #end ?>
    <tr><td><b>From:&nbsp;</b>#{post.feed.text}</td></tr>    
    </table>
    <p>
    #{post.content}
    <p>
    <?py if post.link: ?>
      <a href="#{post.link}">Complete Story</a>
    <?py #end ?>
    <hr>
    </div>
<?py #endfor ?>
